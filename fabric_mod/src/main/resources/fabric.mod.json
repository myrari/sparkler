{
	"schemaVersion": 1,
	"id": "sparkler",
	"version": "${version}",
	"name": "Sparkler",
	"description": "Library mod for subscribing to in-game events and sending external commands.",
	"authors": [
		"@myrari"
	],
	"license": "MIT",
	"icon": "assets/sparkler/icon.png",
	"environment": "client",
	"entrypoints": {
		"client": [
			"net.myrari.sparkler.SparklerClient"
		]
	},
	"mixins": [
		"sparkler.mixins.json",
		{
			"config": "sparkler.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.18.4",
		"minecraft": "~1.21.10",
		"java": ">=21",
		"fabric-api": "*"
	}
}